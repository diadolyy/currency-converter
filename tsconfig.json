{
    "compilerOptions": {
      "target": "es6",  // Компиляция в стандарт ES6
      "module": "es6",  // Используем ES6 модули
      "outDir": "./dist", // Папка, куда будут компилироваться файлы
      "rootDir": "./src", // Папка с исходными TypeScript файлами
      "strict": true,  // Включаем строгую типизацию
      "esModuleInterop": true, // Для работы с модулями
      "allowJs": true
    },
    "include": [
      "src/**/*"
    ]
  }
  